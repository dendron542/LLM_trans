{
    "manifest_version": 3,
    "name": "LLM翻訳拡張機能",
    "version": "1.0",
    "description": "LLM APIを使用してテキストを翻訳するChrome拡張機能",
    "icons": {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "permissions": [
        "activeTab",
        "contextMenus",
        "storage",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "https://*/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "LLM翻訳設定",
        "default_icon": {
            "16": "icon.png",
            "32": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "web_accessible_resources": [
        {
            "resources": [
                "translation_view.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}